{
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "target": "es2016",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
